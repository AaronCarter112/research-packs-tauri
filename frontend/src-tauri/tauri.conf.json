{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Research Packs",
  "version": "0.8.0",
  "identifier": "com.localfirst.researchpacks",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "vite",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Research Packs",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "msi",
      "appimage"
    ],
    "identifier": "com.localfirst.researchpacks",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ]
  }
}